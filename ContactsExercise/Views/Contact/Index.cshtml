@model ContactViewModel

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container">
    <div class="card">
        <div class="card-body m-3">

            <h2 class="mb-5 text-primary">Contacts</h2>
            <div class="row">

                @if (Model.Contacts.Count > 0)
                {
                    foreach (var item in Model.Contacts)
                    {
                        <div class="col-sm-4">
                            <div class="panel">
                                <div class="panel-body p-t-10">
                                    <div class="media-main">
                                        <a asp-action="Details" asp-route-id="@item.Id">
                                            <img class="thumb-lg img-circle bx-s" src="https://picsum.photos/84/84" alt="">
                                        </a>
                                        <div class="pull-right btn-group-sm">
                                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success tooltips" data-placement="top" data-toggle="tooltip" data-original-title="Edit">
                                                <i class="fa fa-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger tooltips" data-placement="top" data-toggle="tooltip" data-original-title="Delete">
                                                <i class="fa fa-close"></i>
                                            </a>
                                        </div>
                                        <div class="info">
                                            <h4>@item.FirstName @item.Name</h4>
                                            <p class="text-muted"><i class="fa fa-phone"></i> @item.PhoneNumber</p>
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                    <hr>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <h1>
                        There are no contacts available.
                    </h1>
                }
            </div>
            <div class="text-right">

                <button class="btn btn-primary btn-lg" type="button" onclick="location.href='@Url.Action("Create","Contact")'">New contact</button>
            </div>
        </div>
    </div>
</div>

<style type="text/css">
    body {
        margin-top: 20px;
    }

    img {
        border-radius: 50%;
    }

    .p-t-10 {
        padding-top: 10px !important;
    }

    .media-main a.pull-left {
        width: 100px;
    }

    .thumb-lg {
        height: 84px;
        width: 84px;
    }

    .media-main .info {
        overflow: hidden;
        color: #000;
    }

        .media-main .info h4 {
            padding-top: 10px;
            margin-bottom: 5px;
        }

    .social-links li a {
        background: #EFF0F4;
        width: 30px;
        height: 30px;
        line-height: 30px;
        text-align: center;
        display: inline-block;
        border-radius: 50%;
        -webkit-border-radius: 50%;
        color: #7A7676;
    }
</style>