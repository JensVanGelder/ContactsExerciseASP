@model ContactDeleteViewModel

<form asp-controller="Contact" asp-action="Delete" method="post">
    <p>Are you sure you want to delete @Model.Name?</p>
    <input type="hidden" asp-for="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Contact" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>